# Dockerfile.mcp - Ansible MCP Server
FROM node:20-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY server/ ./server/

# Build TypeScript
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /workspace

# Install Ansible and dependencies
RUN apk add --no-cache \
    ansible \
    ansible-lint \
    python3 \
    py3-pip \
    py3-virtualenv \
    git \
    openssh-client \
    curl \
    jq

# Install build dependencies for Python packages that need compilation
RUN apk add --no-cache --virtual .build-deps \
    gcc \
    python3-dev \
    musl-dev \
    linux-headers \
    libffi-dev

# Create virtual environment and install Python packages
RUN python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir \
    kubernetes \
    openshift \
    pyvmomi \
    boto3 && \
    apk del .build-deps

# Add venv to PATH
ENV PATH="/opt/venv/bin:$PATH"

# Create non-root user for security
RUN addgroup -g 1001 -S ansible && \
    adduser -u 1001 -S ansible -G ansible

# Copy built application
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./

# Create directories with proper ownership
RUN mkdir -p /workspace/playbooks \
             /workspace/inventory \
             /workspace/logs \
             /workspace/templates \
    && chown -R ansible:ansible /workspace

# Set up Ansible configuration
COPY ansible.cfg /etc/ansible/ansible.cfg

# Switch to non-root user
USER ansible

# Expose MCP port and metrics port
EXPOSE 3000 9090

# Health check (uses metrics server on port 9090)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:9090/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"

# Run the MCP server
CMD ["node", "dist/server/server.js"]
